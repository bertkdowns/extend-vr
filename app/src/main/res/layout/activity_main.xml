<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome" />

    <com.extendvr.DebugCanvas
        android:layout_width="match_parent"
        android:layout_height="400dp">
    </com.extendvr.DebugCanvas>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/lockFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLockExposureClick"
            android:text="@string/lock_exposure" />
        <Button
            android:id="@+id/CustomTabs_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLaunchBrowserClick"
            android:text="@string/launch_browser" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect controllers:" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/leftControllerbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="connectController"
            android:text="Left" />
        <Button
            android:id="@+id/rightControllerbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="connectController"
            android:text="Right" />
    </LinearLayout>


</LinearLayout>